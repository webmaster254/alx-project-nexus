# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
TIME_ZONE=UTC
LANGUAGE_CODE=en-us

# Database Configuration
# Option 1: Use DATABASE_URL for cloud deployments (recommended)
DATABASE_URL=postgresql://username:password@ep-example-123456.us-east-1.aws.neon.tech/neondb?sslmode=require

# Option 2: Individual database parameters (fallback)
# DB_NAME=job_board_dev
# DB_USER=postgres
# DB_PASSWORD=password
# DB_HOST=localhost
# DB_PORT=5432

# Database Connection Pooling (Production)
DB_CONN_MAX_AGE=600
DB_MAX_CONNECTIONS=20
DB_MIN_CONNECTIONS=5
DB_CONNECT_TIMEOUT=10
DB_APPLICATION_NAME=job_board_backend
DB_PREPARED_STATEMENT_CACHE_SIZE=100
DB_CONN_HEALTH_CHECKS=True

# Email Configuration (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
SERVER_EMAIL=noreply@jobboard.com
DEFAULT_FROM_EMAIL=noreply@jobboard.com

# Redis Configuration (for production caching)
REDIS_URL=redis://127.0.0.1:6379/1

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com
CORS_ALLOW_ALL_ORIGINS=False
CSRF_TRUSTED_ORIGINS=https://yourdomain.com

# Security Settings (Production)
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_NAME=sessionid
SESSION_EXPIRE_AT_BROWSER_CLOSE=True

# Logging Configuration
LOG_DIR=/var/log/django
LOG_LEVEL=INFO
LOG_MAX_BYTES=52428800
LOG_BACKUP_COUNT=10
AUDIT_LOG_MAX_BYTES=104857600
AUDIT_LOG_BACKUP_COUNT=20
SECURITY_LOG_MAX_BYTES=104857600
SECURITY_LOG_BACKUP_COUNT=20
PERFORMANCE_LOG_MAX_BYTES=52428800
PERFORMANCE_LOG_BACKUP_COUNT=10
ERROR_LOG_MAX_BYTES=104857600
ERROR_LOG_BACKUP_COUNT=20
DB_LOG_LEVEL=WARNING
ENABLE_STRUCTURED_LOGGING=True
ENABLE_SYSLOG=False
SYSLOG_ADDRESS=/dev/log
SYSLOG_FACILITY=local0

# Health Check Configuration
HEALTH_CHECK_ENABLED=True
HEALTH_CHECK_DATABASE=True
HEALTH_CHECK_CACHE=True
HEALTH_CHECK_STORAGE=True

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=True
SLOW_QUERY_THRESHOLD=1.0

# File Upload Settings
FILE_UPLOAD_MAX_MEMORY_SIZE=2621440
DATA_UPLOAD_MAX_MEMORY_SIZE=2621440
DATA_UPLOAD_MAX_NUMBER_FIELDS=1000

# Static/Media Files
STATIC_URL=/static/
STATIC_ROOT=/var/www/static
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/media
USE_WHITENOISE=False

# Application Settings
USE_ETAGS=True
PREPEND_WWW=False
APPEND_SLASH=True
USE_I18N=True
USE_L10N=True

# Admin Configuration
ADMINS=admin@jobboard.com:Admin Name
MANAGERS=admin@jobboard.com:Admin Name

# Additional Security
ENABLE_SECURITY_MIDDLEWARE=True
CUSTOM_ERROR_PAGES=True

# Application Metadata
VERSION=1.0.0
ENVIRONMENT=production